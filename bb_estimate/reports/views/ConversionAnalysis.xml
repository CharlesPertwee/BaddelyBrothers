<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="lead_conversion_analysis">
        <t t-if="data[0].get('Leads')">
            <div class="container o_mrp_bom_report_page">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>Enquiry Conversion Stats Report</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mt16">
                            <table width="100%" class="o_mrp_bom_expandable">
                                <thead>
                                    <tr>
                                        <th>Financial Year</th>
                                        <th>Total Enquiries</th>
                                        <th class="text-right">Enquiry Type</th>
                                        <th class="text-right">Converted to Estimate</th>
                                        <th class="text-right">Converted to Orders</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="data[0]['report_type'] == 'html'" t-call="bb_estimate.report_conversion_analysis_line"/>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </t>
        <t t-else="">
            <h1>No Data Available</h1>
        </t>
    </template>
    
