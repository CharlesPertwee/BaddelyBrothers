<odoo>
    <template id="as_before_label">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="mo">
                        <div class="page">
                            <div class="container" style="font-family:arial; font-size:10pt; padding:1px;">
                                <div class="row">
                                    <div class="col-6">
                                        <p>BB: <b><span t-field="mo.name"/></b></p>
                                    </div>
                                    <div class="col-6">
                                         <p><b>Inv Date: <!--Add after adding the invoice reference--></b></p>
                                    </div>
                                </div>
                                
                                <p>Inv: </p>                                
                                <p>Customer: <b><span t-field="mo.Estimate.partner_id"/></b></p>
                                <p>Job Title: <b><span t-field="mo.name"/></b></p>
                                <p>Spec: <b><!--Add after adding spec field"/--></b></p>
                                
                                <div class="row">
                                    <div class='col-6'>
                                        <p>Env Type: <span t-field="mo.Estimate.envelope_type"/></p> 
                                    </div>
                                    <div class='col-6 pull-right'>
                                        <p>Flap Type: <span t-field="mo.Estimate.flap_glue_type"/></p> 
                                    </div>
                                </div>
                                
                                <p>Material: <br/>
                                <t t-foreach="mo.Estimate.estimate_line" t-as="line">
                                    <t t-if="line.option_type and line.option_type == 'material' and line.material.categ_id.name != 'Box'">
                                        <span t-esc="line.GenerateMaterialDetails(line)" />
                                    </t>
                                </t>
                                </p>
                                
                                <div class="row">
                                    <div class='col-6'>
                                        <p>Qty: <span t-field="mo.product_qty"/></p> 
                                    </div>
                                    <div class='col-6'>
                                        <p>Value: <span t-field="mo.Estimate.selectedPrice"/></p> 
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>