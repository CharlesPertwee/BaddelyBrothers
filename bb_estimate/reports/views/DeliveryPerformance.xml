<odoo>
	<data>
		<record id="delivery_performance_tree" model="ir.ui.view">
	        <field name="name">delivery_performance</field>
	        <field name="model">bb_estimate.delivery_performance</field>
	        <field name="arch" type="xml">
				<tree string="Delivery Performance">
					<field name="FinancialYear" />
					<field name="Year" />
	                <field name="Month" />
	                <field name="Early" />
	                <field name="OnTime" />
	                <field name="Delayed" />
	                <field name="DeliverySummary" />
	            </tree>
	        </field>
	    </record>

	    <record id="delivery_performance_report" model="ir.actions.act_window">
	        <field name="name">Delivery Performance</field>
	        <field name="res_model">bb_estimate.delivery_performance</field>
	        <field name="view_mode">tree</field>
		</record> 

	    <menuitem id="delivery_performance_menu" name="Delivery Performance" parent="sale.menu_sale_report" action="delivery_performance_report"/>
	</data>
</odoo>