<odoo>
    <template id="custom_purchase_order">
            <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                    <div style="font-family: Georgia;">
                        <div class="backgroundimage" style="position:absolute;z-index:-999;padding-right:30px;"> 
				<img class="img-responsive" src="/bb_estimate/static/src/img/BB_invoice.jpg" width="950px" height="1429px"/>
                        </div> 
                        <div class="row" style="padding-top:18em; padding-left:2em; padding:right:2em;">
                            <div class="col-7">
                                <t t-if="o.partner_id.parent_id">
                                    <p><span t-field="o.partner_id.partner_id.name"/><br/>
                                        <span t-field="o.partner_id.street"/><br/>
                                        <span t-field="o.partner_id.city"/> <span t-field="o.partner_id.state_id.code"/> <span t-field="o.partner_id.zip"/><br/>
                                        <span t-field="o.partner_id.country_id.name"/><br/></p>
                                </t>
                                <t t-else="">
                                    <p><span t-field="o.partner_id.name"/><br/>
                                        <span t-field="o.partner_id.street"/><br/>
                                        <span t-field="o.partner_id.city"/> <span t-field="o.partner_id.state_id.code"/> <span t-field="o.partner_id.zip"/><br/>
                                        <span t-field="o.partner_id.country_id.name"/><br/></p>
                                </t>
                            </div>
                            <div class="col-5">
                                <div class="row">
                                    <div class="col-4">
                                        <p class="pull-left">Tel: </p>
                                    </div>
                                    <div class="col-8">
                                        <p class="pull-left"><span t-field="o.partner_id.phone"/></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <p class="pull-left">
                                            E-mail:
                                        </p>
                                    </div>
                                    <div class="col-8">
                                        <p ><span t-field="o.partner_id.email"/></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-5">
                                        <p class="pull-left">
                                            Order Date: <br/>
                                            Delivery Req.: 
                                        </p>
                                    </div>
                                    <div class="col-7">
                                        <p ><span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}'/><br/>
                                            <span t-field="o.date_planned" t-options='{"format": "dd/MM/yyyy"}'/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h4 class="text-center" style="clear:both;"><b>Purchase Order No. <span t-field="o.name"/></b></h4>
                        <hr style="border:1px black solid"/>
                        <p style="margin-left: 19px;">Our purchase order and job numbers must be quoted on your invoice.</p>
                        <p style="margin-left: 19px;">Please supply the following : -</p>
                        <table style="margin-left: 19px;">
                            <t t-foreach="o.order_line" t-as="order">
                                <tr>
                                    <td  width="25%"><span t-esc="int(float(order.product_qty))"/></td>
                                    <td  width="64%">
                                        <t t-if="order.product_id.type == 'service'">
                                            <span t-field="order.name"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="order.product_id.name"/>
                                        </t>
                                    </td>
                                    <td  width="32%" align="left"><span t-field="order.price_subtotal"/></td>
                                </tr>
                            </t>
                        </table>
                        
                        <div style="padding-top:25em; margin-left: 19px;">
                            <div class="row">
                                <div class="col-6">
                                    <span t-field="o.user_id"/>
                                </div>
                                <div class="col-6 pull-right">
                                    <div class="row">
                                        <div class="col-6">
                                            <p class="pull-left">Total Cost Ex VAT:  </p>
                                        </div>
                                        <div class="col-6">
                                            <p class="pull-left" style="margin-left: 19px;"><span t-field="o.amount_total"/></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p> For and on behalf of Baddeley Brothers Ltd</p>
                        </div>
                    </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>
