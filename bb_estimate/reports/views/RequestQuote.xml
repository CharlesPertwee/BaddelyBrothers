<odoo>
    <template id="request_for_quote_custom" inherit_id="purchase.report_purchasequotation_document" primary="True">
            <xpath expr="." position="replace">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                    <t t-call="web.html_container">
                            <div class="backgroundimage" style="position:absolute;z-index:-999;padding-right:30px;"> 
                                <img class="img-responsive" src="/bb_estimate/static/src/img/BB_invoice.jpg" width="950px" height="1429px"/>
                            </div> 
                            <div class="page" style="padding-top:17em; font-family: Georgia; padding-left:2em; padding-right:2em;"> 
                                <div class="container">
                                    <div class="row">
                                        <p><span t-field="o.company_id.name"/><br/>
                                            <t t-if="o.company_id.street"><span t-field="o.company_id.street"/><br/></t>
                                            <t t-if="o.company_id.street2"><span t-field="o.company_id.street2"/><br/></t>
                                            <t t-if="o.company_id.city"><span t-field="o.company_id.city"/></t> <t t-if="o.company_id.state_id.code"><span t-field="o.company_id.state_id.code"/></t> <t t-if="o.company_id.zip"><span t-field="o.company_id.zip"/><br/></t>
                                            <t t-if="o.company_id.country_id.name"><span t-field="o.company_id.country_id.name"/><br/></t></p>
                                    </div>
                                    <div class="row pull-right">
                                        <t t-if="o.partner_id.parent_id">
                                            <p><span t-field="o.partner_id.parent_id.name"/><br/>
                                                <t t-if="o.partner_id.street"><span t-field="o.partner_id.street"/><br/></t>
                                                <t t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/><br/></t>
                                                <t t-if="o.partner_id.city"><span t-field="o.partner_id.city"/></t> <t t-if="o.partner_id.state_id.code"><span t-field="o.partner_id.state_id.code"/></t> <t t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"/><br/></t>
                                                <t t-if="o.partner_id.country_id.name"><span t-field="o.partner_id.country_id.name"/><br/></t></p>
                                        </t>
                                        <t t-else="">
                                            <p><span t-field="o.partner_id.name"/><br/>
                                                <t t-if="o.partner_id.street"><span t-field="o.partner_id.street"/><br/></t>
                                                <t t-if="o.partner_id.street2"><span t-field="o.partner_id.street2"/><br/></t>
                                                <t t-if="o.partner_id.city"><span t-field="o.partner_id.city"/></t> <t t-if="o.partner_id.state_id.code"><span t-field="o.partner_id.state_id.code"/></t> <t t-if="o.partner_id.zip"><span t-field="o.partner_id.zip"/><br/></t>
                                                <t t-if="o.partner_id.country_id.name"><span t-field="o.partner_id.country_id.name"/><br/></t></p>
                                        </t>
                                    </div>
                                </div>
                                
                                <div class="container" style="clear: both;">                                    
                                    <h2>Request for Quotation <span t-field="o.name"/></h2>

                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th><strong>Description</strong></th>
                                                <th class="text-center"><strong>Expected Date</strong></th>
                                                <th class="text-right"><strong>Qty</strong></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.order_line" t-as="order_line">
                                                <td>
                                                    <t t-if="order_line.product_id.type == 'service'">
                                                        <span t-field="order_line.name"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span t-field="order_line.product_id.name"/>
                                                    </t>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="order_line.date_planned"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="order_line.product_qty"/>
                                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <p t-field="o.notes"/>
                                <hr/>
                                <p>Regards,</p>
                                <p><span t-field="o.user_id"/></p>                                
                            </div>
                        </t>
                    </t>
                </t>
            </xpath>
        </template>
</odoo>
