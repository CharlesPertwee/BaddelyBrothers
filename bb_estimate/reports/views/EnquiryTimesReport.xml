<odoo>
	<data>
		<record id="conversion_monthly_times_tree" model="ir.ui.view">
	        <field name="name">Conversion Time Report</field>
	        <field name="model">bb_estimate.conversion_times_report</field>
	        <field name="arch" type="xml">
				<tree string="Conversion">
	                <field name="Year" />
	                <field name="Month" />
	                <field name="EnquiryType" />
	                <field name="AvgConversionTime" />
	            </tree>
	        </field>
	    </record>

	    <record id="conversion_monthly_times" model="ir.actions.act_window">
	        <field name="name">Enquiry Conversion Time Report</field>
	        <field name="res_model">bb_estimate.conversion_times_report</field>
	        <field name="view_mode">tree</field>
		</record> 

	    <menuitem id="conversion_times_report" name="Conversion Times By Month" parent="crm.crm_menu_report" action="conversion_monthly_times"/>
	</data>
</odoo>