<odoo>
    <template id="custom_purchase_order">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="po">
                        <div class="backgroundimage" style="position:absolute;z-index:-999;"> 
                            <img class="img-responsive" src="/bb_estimate/static/src/img/Bb_invoice.jpg" width="900px" height="1335px"/>
                        </div>
                        <div class="row" style="padding-top:18em; padding-left:2em; padding:right:2em;">
                            <div class="col-7">
                                <p><span t-field="po.partner_id.name"/><br/>
                                    <span t-field="po.partner_id.street"/><br/>
                                    <span t-field="po.partner_id.city"/> <span t-field="po.partner_id.state_id.code"/> <span t-field="po.partner_id.zip"/><br/>
                                    <span t-field="po.partner_id.country_id.name"/><br/></p>
                            </div>
                            <div class="col-5">
                                <div class="row">
                                    <div class="col-4">
                                        <p class="pull-left">Tel: </p>
                                    </div>
                                    <div class="col-8">
                                        <p class="pull-left"><span t-field="po.partner_id.phone"/></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <p class="pull-left">
                                            Fax:
                                        </p>
                                    </div>
                                    <div class="col-8">
                                        <p class="pull-left"><span t-field="po.partner_id.faxNumber"/></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <p class="pull-left">
                                            Fax:
                                        </p>
                                    </div>
                                    <div class="col-8">
                                        <p ><span t-field="po.partner_id.email"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div style="float:right">
                            Suppliers Ac Code: <span t-field="po.partner_id.reference"/><br/>
                            Order Date: <span t-field="po.date_order" t-options='{"format": "dd/MM/yyyy"}'/> <br/>
                            Delivery Required By: <span t-field="po.date_planned" t-options='{"format": "dd/MM/yyyy"}'/> <br/>
                        </div>
                        <br/>
                        <h4 class="text-center" style="clear:both;"><b>Purchase Order No. <span t-field="po.name"/></b></h4>
                        <hr style="border:1px black solid"/>
                        <p>Our purchase order and job numbers must be quoted on your invoice.</p>
                        <p>Please supply the following : -</p>
                        <table>
                            <t t-foreach="po.order_line" t-as="order">
                                <tr>
                                    <td  width="50%"><span t-field="order.product_qty"/></td>
                                    <td  width="70%"><span t-field="order.product_id.name"/></td>
                                    <td  width="20%"><span t-field="order.price_subtotal"/></td>
                                </tr>
                            </t>
                        </table>
                        
                        <div style="padding-top:25em;">
                            <p> For and on behalf of Baddeley Brothers Ltd</p>
                            <div class="row">
                                <div class="col-6">
                                    <span t-field="po.user_id"/>
                                </div>
                                <div class="col-6 pull-right">
                                    <div class="row">
                                        <div class="col-6">
                                            <p class="pull-left">Total Cost Ex VAT:  </p>
                                        </div>
                                        <div class="col-6">
                                            <p class="pull-left"><span t-field="po.amount_total"/></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>