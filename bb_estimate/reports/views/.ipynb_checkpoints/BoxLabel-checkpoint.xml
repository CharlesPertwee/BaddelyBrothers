<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="box_label">
            <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                        <div class="page">
                            <div class="container" style="font-family:arial; font-size:9pt; padding:1px;">
                                <p><b><span t-field="o.name"/></b></p>
                                <div class="row">
                                    <div class="col-6">
                                        <p><span t-field="o.name"/></p>
                                    </div>
                                    <div class="col-3">
                                        <p class="pull-right">Cust Ref:</p>
                                    </div>
                                    <div class="col-3">
                                        <p class="pull-left"><span t-field="o.customerRef"/></p>
                                    </div>
                                </div>
                                <p><span t-field="o.Estimate.finished_size.name" /> </p>
                                
                                <p>Type: <span t-field="o.Estimate.envelope_type"/><br/>Flap: <span t-field="o.Estimate.flap_glue_type"/><br/>Embossed: <span t-field="o.Estimate.embossed"/><br/></p>
                                
                                <p>Material: <br/>
                                    <t t-foreach="o.Estimate.estimate_line" t-as="line">
                                        <t t-if="line.option_type and line.option_type == 'material' and line.material.categ_id.name != 'Box'">
                                            <span t-esc="line.GenerateMaterialDetails(line)" />
                                        </t>
                                    </t>
                                </p>
                                    
                                <p>Qty: <span t-field="o.product_qty"/></p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>