<odoo>
    <template id="request_for_quote_custom" inherit_id="purchase.report_purchasequotation_document" primary="True">
            <xpath expr="." position="replace">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                    <t t-call="web.html_container">
                            <div class="backgroundimage" style="position:absolute;z-index:-999;"> 
                                <img class="img-responsive" src="/bb_estimate/static/src/img/Bb_invoice.jpg" width="900px" height="1335px"/>
                            </div> 
                            <div class="page" style="padding-top:17em; padding-left:2em; padding-right:2em;">
                                <div class="container">
                                    <div class="row">
                                        <p><span t-field="o.company_id.name"/><br/>
                                            <span t-field="o.company_id.street"/><br/>
                                            <span t-field="o.company_id.city"/> <span t-field="o.company_id.state_id.code"/> <span t-field="o.company_id.zip"/><br/>
                                            <span t-field="o.company_id.country_id.name"/><br/></p>
                                    </div>
                                    <div class="row pull-right">
                                        <p><span t-field="o.partner_id.name"/><br/>
                                            <span t-field="o.partner_id.street"/><br/>
                                            <span t-field="o.partner_id.city"/> <span t-field="o.partner_id.state_id.code"/> <span t-field="o.partner_id.zip"/><br/>
                                            <span t-field="o.partner_id.country_id.name"/><br/></p>
                                    </div>
                                </div>
                                
                                <div class="container" style="clear: both;">                                    
                                    <h2>Request for Quotation <span t-field="o.name"/></h2>

                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th><strong>Description</strong></th>
                                                <th class="text-center"><strong>Expected Date</strong></th>
                                                <th class="text-right"><strong>Qty</strong></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="o.order_line" t-as="order_line">
                                                <td>
                                                    <span t-field="order_line.name"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="order_line.date_planned"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="order_line.product_qty"/>
                                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <p t-field="o.notes"/>
                                <hr/>
                                <p>Regards,</p>
                                
                            </div>
                        </t>
                    </t>
                </t>
            </xpath>
        </template>
</odoo>