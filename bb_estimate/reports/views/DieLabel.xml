<odoo>
    <template id="die_label">
            <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <t t-call="web.html_container">
                        <div class="page">
                            <div class="container" style="font-family:arial; font-size:11pt; padding:15px;">
                                <div class="row">
                                    <div class="col-6">
                                        <p><b><span t-field="o.name"/></b></p>
                                    </div>
                                    <div class="col-6">
                                        <p><b>Qty: <span t-field="o.product_qty"/></b></p>
                                    </div>
                                </div>
                                
                                <p>Prev Job: </p>  
                                <t t-if="o.Estimate.partner_id.parent_id">
                                    <p>Customer: <b><span t-field="o.Estimate.partner_id.parent_id.name"/></b></p>
                                </t>
                                <t t-else="">
                                    <p>Customer: <b><span t-field="o.Estimate.partner_id.name"/></b></p>
                                </t>
                                <p>Job Title: <b><span t-field="o.Estimate.title"/></b></p>
                                <p>Date: <b><span t-field="o.create_date" t-options='{"format": "dd/MM/yyyy"}'/></b></p>
                                                              
                                <p>Notes: </p>
                                
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>
