<odoo>
    <data>    
        <report
            id="account_invoice_invoice"
            model="account.invoice"
            string="B.B Invoice"
            report_type="qweb-pdf"
            name="bb_estimate.report_invoice_document"
            file="bb_estimate.report_invoice_document"
            attachment="((object._get_report_base_filename() or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
            groups="account.group_account_invoice"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account_invoice_invoice_headed"
            model="account.invoice"
            string="B.B Invoice(Headed Paper)"
            report_type="qweb-pdf"
            name="bb_estimate.report_inv_head_document"
            file="bb_estimate.report_inv_head_document"
            attachment="(((object._get_report_base_filename()+'(Headed)') or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename()+'(Headed)')"
            groups="account.group_account_invoice"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account_pro_forma"
            model="account.invoice"
            string="B.B Pro Forma"
            report_type="qweb-pdf"
            name="bb_estimate.report_pro_forma_document"
            file="bb_estimate.report_pro_forma_document"
            attachment="(('Pro Forma').replace('/','')+'.pdf')"
            print_report_name="('Pro Forma')"
            groups="account.group_account_invoice"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account_pro_forma_headed"
            model="account.invoice"
            string="B.B Pro Forma(Headed Paper)"
            report_type="qweb-pdf"
            name="bb_estimate.report_pro_forma_headed_document"
            file="bb_estimate.report_pro_forma_headed_document"
            attachment="(('Pro Forma(Headed)').replace('/','')+'.pdf')"
            print_report_name="('Pro Forma(Headed)')"
            groups="account.group_account_invoice"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account_invoice_credit_note"
            model="account.invoice"
            string="B.B Credit Note"
            report_type="qweb-pdf"
            name="bb_estimate.report_credit_note_document"
            file="bb_estimate.report_credit_note_document"
            attachment="(('Credit Note').replace('/','')+'.pdf')"
            print_report_name="('Credit Note')"
            groups="account.group_account_invoice"
            paperformat="bb_estimate.paperformat_invoice"
        />
       
        <report
            id="account_invoice_credit_note_headed"
            model="account.invoice"
            string="B.B Credit Note(Headed Paper)"
            report_type="qweb-pdf"
            name="bb_estimate.report_credit_note_headed_document"
            file="bb_estimate.report_credit_note_headed_document"
            attachment="(('Credit Note(Header)').replace('/','')+'.pdf')"
            print_report_name="('Credit Note(Header)')"
            groups="account.group_account_invoice"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account.account_invoices"
            model="account.invoice"
            string="Invoices"
            report_type="qweb-pdf"
            menu="False"
            name="account.report_invoice_with_payments"
            file="account.report_invoice_with_payments"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
            groups="account.group_account_invoice"
        />

        <report
            id="account.account_invoices_without_payment"
            model="account.invoice"
            string="Invoices without Payment"
            report_type="qweb-pdf"
            menu="False"
            name="account.report_invoice"
            file="account.report_invoice"
            attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
        />
        
        <record id="account_invoice_inherited" model="ir.ui.view">
            <field name="name">account_invoice.inherited</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" icon="fa-pencil" type="object" name="EditInvoiceLine">
                          <span>Edit Invoice Lines</span>
                      </button>
                </xpath>
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="invoiceDescription" widget="html" invisible="1"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>