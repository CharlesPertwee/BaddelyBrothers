<odoo>
    <data>
        <record id="stage_tree_view" model="ir.ui.view">
            <field name="name">stage.form</field>
            <field name="model">bb_estimate.stage</field>
            <field name="arch" type="xml">
                <tree string="Stages">
                    <field name="name" />
                </tree>
            </field>
        </record>
        
        <record id="stage_form_view" model="ir.ui.view">
            <field name="name">stage.tree</field>
            <field name="model">bb_estimate.stage</field>
            <field name="arch" type="xml">
                <form string="Stages">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="bb_estimate.action_window_stage">
            <field name="name">Estimate Stages</field>
            <field name="res_model">bb_estimate.stage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
               <p class="oe_view_nocontent_create">Create New Estimate</p>
            </field>
        </record>
        <!--
        <menuitem name="Stage" id="bb_estimate.action_window_stage" parent="bb_estimate_estimates" action="bb_estimate.action_window_stage" />
        -->
    </data>
</odoo>