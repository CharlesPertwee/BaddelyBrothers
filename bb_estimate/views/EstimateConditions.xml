<odoo>
    <data>
        <record model="ir.ui.view" id="estimate_conditions_tree_view">
            <field name="name">estimate.conditions</field>
            <field name="model">bb_estimate.conditions</field>
            <field name="arch" type="xml">
                <tree string="Estimate Conditions">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
      
        <record model="ir.ui.view" id="estimate_conditions_form_view">
              <field name="name">estimate.conditions.form</field>
              <field name="model">bb_estimate.conditions</field>
              <field name="arch" type="xml">
                  <form string="Estimate Conditions Form">
                      <sheet>
                          <group>
                              <group>
                                  <field name="name"/>
                                  <field name="isDefault"/>
                              </group>
                              <group>
                                  <field name="description"/>
                              </group>
                          </group>
                      </sheet>
                  </form>
              </field>
        </record>
        
        <record model="ir.actions.act_window" id="bb_estimate.action_window_conditions">
            <field name="name">Estimate Conditions</field>
            <field name="res_model">bb_estimate.conditions</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create New Estimate Condition</p>
            </field>
        </record>
        
        <menuitem name="Estimate Conditions" id="bb_estimate_condition" parent="bb_estimate.bb_estimate_config" action="bb_estimate.action_window_conditions"/>
    </data>
</odoo>