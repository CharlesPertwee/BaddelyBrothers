<odoo>
    <data>
        <record model="ir.ui.view" id="estimate_options_tree_view">
            <field name="name">Option Master</field>
            <field name="model">bb_estimate.specification</field>
            <field name="arch" type="xml">
                <tree string="Option Master" editable="top">
                    <field name="name"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>
      
        <record model="ir.actions.act_window" id="bb_estimate.action_window_options">
            <field name="name">Option Master</field>
            <field name="res_model">bb_estimate.specification</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create New Estimate Condition</p>
            </field>
        </record>
        
        <menuitem name="Options" id="bb_estimate_options" parent="bb_estimate.bb_estimate_config" action="bb_estimate.action_window_options"/>
    </data>
</odoo>