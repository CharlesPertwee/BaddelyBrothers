<odoo>
  <data>
      
      <report
            id="account_pro_forma"
            model="sale.order"
            string="BB Pro Forma"
            report_type="qweb-pdf"
            name="bb_estimate.report_pro_forma_document"
            file="bb_estimate.report_pro_forma_document"
            attachment="(('Pro Forma').replace('/','')+'.pdf')"
            print_report_name="'B.B PRO-FORMA - %s' % (object.name)"
            groups="sale.group_proforma_sales"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account_pro_forma_headed"
            model="sale.order"
            string="BB Pro Forma(Headed Paper)"
            report_type="qweb-pdf"
            name="bb_estimate.report_pro_forma_headed_document"
            file="bb_estimate.report_pro_forma_headed_document"
            attachment="(('Pro Forma(Headed)').replace('/','')+'.pdf')"
            print_report_name="'B.B PRO-FORMA(HEADED) - %s' % (object.name)"
            groups="sale.group_proforma_sales"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="sale.action_report_pro_forma_invoice"
            string="PRO-FORMA Invoice"
            model="sale.order"
            report_type="qweb-pdf"
            menu="False"
            groups="sale.group_proforma_sales"
            file="sale.report_saleorder_pro_forma"
            name="sale.report_saleorder_pro_forma"
            print_report_name="'PRO-FORMA - %s' % (object.name)"
        />

        <record model="ir.ui.view" id="sale_search">
          <field name="name">Sale Search Options</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
          <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
              <field name="Estimate"/>
              <field name="EstimateTitle"/>
              <!--field name="JobTicket"/-->
            </xpath>
            
          </field>
        </record>
      
      <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">quatation.bb</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="Estimate" />
                    <field name="EstimateTitle"/>

                    <!--field name="JobTicket" /-->
                </xpath>
                <xpath expr="//field[@name='date_order']" position="attributes">
                  <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='commitment_date']" position="attributes">
                  <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.bb</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="Estimate" />
                    <field name="EstimateTitle"/>
                    <!--field name="JobTicket" /-->
                </xpath>
                <xpath expr="//field[@name='confirmation_date']" position="attributes">
                  <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='commitment_date']" position="attributes">
                  <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>


      <record id="sales_view_form" model="ir.ui.view">
          <field name="name">sale.view.inherited.form</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//header" position="inside">
                  <button name="AdjustPrice" type="object" string="Adjust Price" />
              </xpath>
              <xpath expr="//field[@name='partner_id']" position="after">
                  <field name="partnerOnHold"/>
                  <field name="Estimate" readonly="1"/>
                  <field name="Project" readonly="1" options="{'no_create': True, 'no_create_edit': True}"/>
                  <field name="JobTicket" readonly="1"/>
                  <field name="ProFormaLines" widget="html" invisible="1"/>
              </xpath>
              <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-pencil" type="object" name="EditProFormaLine">
                      <span>Edit Pro-Forma Lines</span>
                  </button>
              </xpath>
              <xpath expr="//field[@name='confirmation_date']" position="after">
                <field name="orderStatus" />
                <field name="orderDelivered" invisible="1" />
              </xpath>
              <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                  <attribute name="attrs">{'invisible':['|',('partnerOnHold','=',True),('state', 'not in', ['sent'])]}</attribute>
              </xpath>
              <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                  <attribute name="attrs">{'invisible':['|',('partnerOnHold','=',True),('state', 'not in', ['draft'])]}</attribute>
              </xpath>
              <xpath expr="//field[@name='note']" position="attributes">
                  <attribute name="attrs">{'invisible':[('Estimate','!=',False)]}</attribute>
              </xpath>
              <xpath expr="//notebook" position="inside">
                  <page name="PriceAdjustments" string="Price Adjustments">
                        <field name="priceHistory" readonly="1">
                            <tree>
                                <field name="CurrentPrice1" string="Price"/>
                                <field name="ChangedPrice1" string="Changed Price"/>
                                <field name="create_uid" string="By"/>
                                <field name="create_date" string="On" />
                             </tree>
                        </field>
                    </page>
              </xpath>
              <xpath expr="//group[@name='sales_person']/field[@name='analytic_account_id']" position="replace">
                <field name="analytic_account_id" required="True" options="{'no_create': True, 'no_create_edit': True}"/>
              </xpath>
          
              <xpath expr="//field[@name='team_id']" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="//field[@name='effective_date']" position="attributes">
                    <attribute name="string">Delivery Date</attribute>
              </xpath>  

          </field>
      </record>

      <record id="view_sale_stock_order" model="ir.ui.view">
          <field name="name">Sale.Order.Form.bb</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
          <field name="arch" type="xml">
              <xpath expr="//button[@name='action_view_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('partnerOnHold', '=', True),('delivery_count', '=', 0)]}</attribute>
              </xpath>
          </field>
      </record>

      <!--record id="view_sale_order_kanban" model="ir.ui.view">
          <field name="name">sale.order.kanban.bb</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_sale_order_kanban"/>
          <field name="arch" type="xml">
              <kanban position="attributes">
                <attribute name="default_group_by">orderStatus</attribute>
              </kanban>
          </field>
      </record-->

  </data>
</odoo>
