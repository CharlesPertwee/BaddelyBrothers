<odoo>
  <data>
      
      <report
            id="account_pro_forma"
            model="sale.order"
            string="BB Pro Forma"
            report_type="qweb-pdf"
            name="bb_estimate.report_pro_forma_document"
            file="bb_estimate.report_pro_forma_document"
            attachment="(('Pro Forma').replace('/','')+'.pdf')"
            print_report_name="'B.B PRO-FORMA - %s' % (object.name)"
            groups="sale.group_proforma_sales"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="account_pro_forma_headed"
            model="sale.order"
            string="BB Pro Forma(Headed Paper)"
            report_type="qweb-pdf"
            name="bb_estimate.report_pro_forma_headed_document"
            file="bb_estimate.report_pro_forma_headed_document"
            attachment="(('Pro Forma(Headed)').replace('/','')+'.pdf')"
            print_report_name="'B.B PRO-FORMA(HEADED) - %s' % (object.name)"
            groups="sale.group_proforma_sales"
            paperformat="bb_estimate.paperformat_invoice"
        />
        
        <report
            id="sale.action_report_pro_forma_invoice"
            string="PRO-FORMA Invoice"
            model="sale.order"
            report_type="qweb-pdf"
            menu="False"
            groups="sale.group_proforma_sales"
            file="sale.report_saleorder_pro_forma"
            name="sale.report_saleorder_pro_forma"
            print_report_name="'PRO-FORMA - %s' % (object.name)"
        />
      
      <record id="view_quotation_tree" model="ir.ui.view">
            <field name="name">quatation.bb</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="Estimate" />
                    <field name="JobTicket" />
                </xpath>
            </field>
        </record>

        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.bb</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="Estimate" />
                    <field name="JobTicket" />
                </xpath>
            </field>
        </record>


      <record id="sales_view_form" model="ir.ui.view">
          <field name="name">sale.view.inherited.form</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//header" position="inside">
                  <button name="AdjustPrice" type="object" string="Adjust Price" />
              </xpath>
              <xpath expr="//field[@name='partner_id']" position="after">
                  <field name="partnerOnHold"/>
                  <field name="Estimate" readonly="1"/>
                  <field name="Project" readonly="1"/>
                  <field name="JobTicket" readonly="1"/>
                  <field name="ProFormaLines" widget="html" invisible="1"/>
              </xpath>
              <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-pencil" type="object" name="EditProFormaLine">
                      <span>Edit Pro-Forma Lines</span>
                  </button>
            </xpath>
              <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                  <attribute name="attrs">{'invisible':['|',('partnerOnHold','=',True),('state', 'not in', ['sent'])]}</attribute>
              </xpath>
              <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                  <attribute name="attrs">{'invisible':['|',('partnerOnHold','=',True),('state', 'not in', ['draft'])]}</attribute>
              </xpath>
              <xpath expr="//field[@name='note']" position="attributes">
                  <attribute name="attrs">{'invisible':[('Estimate','!=',False)]}</attribute>
              </xpath>
              <xpath expr="//notebook" position="inside">
                  <page name="PriceAdjustments" string="Price Adjustments">
                        <field name="priceHistory" readonly="1">
                            <tree>
                                <field name="CurrentPrice1" string="Price"/>
                                <field name="ChangedPrice1" string="Changed Price"/>
                                <field name="create_uid" string="By"/>
                                <field name="create_date" string="On" />
                             </tree>
                        </field>
                    </page>
              </xpath>
          </field>
      </record>
  </data>
</odoo>