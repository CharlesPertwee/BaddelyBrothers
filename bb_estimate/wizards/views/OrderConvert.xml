<odoo>
    <data>
        <record id="wizard_convert_to_order_form" model="ir.ui.view">
            <field name="name">Convert To Order</field>
            <field name="model">bb_estimate.wizard_order_convert</field>
            <field name="arch" type="xml">
                <form string="Estimate">
                    <sheet>
                        <field name="EstimateId" invisible="1"/>
                        <field name="HasExtra" invisible="1"/>
                        <group>
                            <h5>Final Quantity Selection</h5>
                            <hr/>
                            <field name="QuantityRequired"/>
                            <field name="ExtrasApplied" attrs="{'invisible':[('HasExtra','=',False)]}"/>
                        </group>
                        <group>
                            <field name="RunOnQuantity"/>
                            <field name="RunOnPrice"/>
                            <field name="RunOnRequired"/>
                        </group>
                        <group>
                            <field name="TotalQuantity"/>
                            <field name="TotalPrice"/>
                        </group>
                        <footer>
                            <button name="CreateOrder" string="Convert Estimate to Order" class="oe_right oe_highlight" type="object"/>
                            <button string="Cancel" class="oe_right" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>