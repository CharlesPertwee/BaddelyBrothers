<odoo>
    <data>
        <record id = "invoice_edit_line" model="ir.ui.view">
            <field name="name">edit_invoice_line_wizard</field>
            <field name="model">invoice.edit_lines</field>
            <field name="arch" type="xml">
                <form string="Edit Invoice Lines">
                    <sheet>
                        <group>
                            <field name="SaleOrder" invisible="1"/>
                            <field name="InvoiceId" invisible="1"/>
                            <field name="invoiceEditableLines" widget="html"/>
                        </group>
                        <footer>
                            <button name="ChangeInvoiceLines" string="Save Changes" class="oe_right oe_highlight" type="object"/>
                            <button string="Cancel" class="oe_right" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>