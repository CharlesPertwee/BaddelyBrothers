<odoo>
    <data>
        <record id="confimation_message" model="ir.ui.view">
            <field name="name">Confimation</field>
            <field name="model">bb_estimate.confirmation_box</field>
            <field name="arch" type="xml">
                <form string="Confirmation">
                    <sheet>
                        <group>
                            <field name="data" readonly="1" nolabel="1"/>
                        </group>
                        <footer>
                            <button name="Ok" string="Ok" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>