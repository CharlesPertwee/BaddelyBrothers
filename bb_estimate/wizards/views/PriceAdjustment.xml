<odoo>
    <data>
        
        <record id="wizard_adjustment" model="ir.ui.view">
            <field name="name">Adjust Prices</field>
            <field name="model">bb_estimate.adjust_price</field>
            <field name="arch" type="xml">
                <form string="Adjustments">
                    <sheet>
                        <field name="Estimate" invisible="1"/>
                        <group col="6">
                            <label for="EstimateQuantity1" string=""/>
                            <label for="EstimateQuantity1" string="Qty 1"/>  
                            <label for="EstimateQuantity1" string="Qty 2"/>  
                            <label for="EstimateQuantity1" string="Qty 3"/>  
                            <label for="EstimateQuantity1" string="Qty 4"/>  
                            <label for="EstimateQuantity1" string="Qty Run On"/>
                            
                            <label for="EstimateQuantity1" string=""/>
                            <field name="EstimateQuantity1" nolabel="1" />
                            <field name="EstimateQuantity2" nolabel="1" />
                            <field name="EstimateQuantity3" nolabel="1" />
                            <field name="EstimateQuantity4" nolabel="1" />
                            <field name="EstimateQuantityRunOn" nolabel="1" />
                            
                            <label for="EstimatePrice1" string="Current Total Price:"/>
                            <field name="EstimatePrice1" nolabel="1" />
                            <field name="EstimatePrice2" nolabel="1" />
                            <field name="EstimatePrice3" nolabel="1" />
                            <field name="EstimatePrice4" nolabel="1" />
                            <field name="EstimatePriceRunOn" nolabel="1" />
                            
                            <label for="AdjustedPrice1" string="Required Total Price:"/>
                            <field name="AdjustedPrice1" nolabel="1" />
                            <field name="AdjustedPrice2" nolabel="1" />
                            <field name="AdjustedPrice3" nolabel="1" />
                            <field name="AdjustedPrice4" nolabel="1" />
                            <field name="AdjustedPriceRunOn" nolabel="1" />
                            
                            <label for="AdjustPricePercent1" string="Percent Change:"/>
                            <field name="AdjustPricePercent1" nolabel="1" />
                            <field name="AdjustPricePercent2" nolabel="1" />
                            <field name="AdjustPricePercent3" nolabel="1" />
                            <field name="AdjustPricePercent4" nolabel="1" />
                            <field name="AdjustPricePercentRunOn" nolabel="1" />
                            
                            <label for="PriceDelta1" string="Price Adjustment:"/>
                            <field name="PriceDelta1" nolabel="1" readonly="1"/>
                            <field name="PriceDelta2" nolabel="1" readonly="1"/>
                            <field name="PriceDelta3" nolabel="1" readonly="1"/>
                            <field name="PriceDelta4" nolabel="1" readonly="1"/>
                            <field name="PriceDeltaRunOn" nolabel="1" readonly="1"/>
                            
                            <label for="PricePer1000_1" string="Price Per 1000:"/>
                            <field name="PricePer1000_1" nolabel="1" />
                            <field name="PricePer1000_2" nolabel="1" />
                            <field name="PricePer1000_3" nolabel="1" />
                            <field name="PricePer1000_4" nolabel="1" />
                            <field name="PricePer1000_RunOn" nolabel="1" />
                             
                        </group>
                        <footer>
                            <button name="Confirm" string="Confirm" class="oe_right oe_highlight" type="object"/>
                            <button string="Cancel" class="oe_right" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>