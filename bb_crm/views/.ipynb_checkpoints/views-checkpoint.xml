<odoo>
  <data>
     <record id="crm_case_form_view_leads_bb" model="ir.ui.view">
		<field name="name">crm.lead.form.opportunity.bb</field>
		<field name="model">crm.lead</field>
		<field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="typeOfLead" />
            </xpath>
            
            <xpath expr="//field[@name='stage_id']" position="replace">
                <field name="stage_id" widget="statusbar"
                            options="{'clickable': '1', 'fold_field': 'fold'}"
                            domain="['|','&amp;',('team_id', '=', team_id), ('team_id', '=', False),('typeOfLead','=',typeOfLead)]"
                            attrs="{'invisible': [('active', '=', False)]}"/>
            </xpath>
            
            
		</field>
	 </record>	
    
      <record id="crm_stage_form_bb" model="ir.ui.view">
		<field name="name">crm.stage.form.bb</field>
		<field name="model">crm.stage</field>
		<field name="inherit_id" ref="crm.crm_stage_form"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="typeOfLead" />
            </xpath>
		</field>
	 </record>
      
  </data>
</odoo>