<odoo>
  <data>
     <record id="product_template_form_view_bb" model="ir.ui.view">
		<field name="name">product.template.common.form.bb</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <!--field name="estimateAvailable" /-->
                <field name="grammage" />
                <field name="sheetSize" />
                <field name="customerDescription"/>
                <field name="jobTicketDescription"/>
                <field name="productType" />
                <field name="isEnvelope" />
            </xpath>
            <!--field name="categ_id" postition="after">
                
            </field-->
            
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="margin" />
            </xpath>
            
            <xpath expr="//field[@name='uom_po_id']" position="after">
                <field name="lastUsedEstimateDate" />
                <field name="lastUsedEstimateNumber" />
            </xpath>
            
            <xpath expr="//field[@name='standard_price']/.." position="after">
                <field name="sheet_width"/>
                <field name="sheet_height"/>
                <field name="thickness"/>
                <field name="staticPrice"/>
            </xpath>
     	</field>
	 </record>
      
      <act_window name="Delete Unused"
                  res_model="product.delete_by_date"
                  src_model="product.template"
                  multi="True"
                  view_type="form" view_mode="form"
                  key2="client_action_multi"
                  target="new"
                  id="product_delete_by_date"
                  />
  </data>
</odoo>