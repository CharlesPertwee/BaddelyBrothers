<odoo>
  <data>
      
    <record id="product_template_only_form_view_bb" model="ir.ui.view">
		<field name="name">product.template.product.form.bb</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_only_form_view"/>
		<field name="arch" type="xml">
            
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="estimateAvailable" />
                <field name="grammage" />
                <field name="sheetSize" />
                <field name="customerDescription"/>
                <field name="jobTicketDescription"/>
                <field name="productType" />
                <field name="isEnvelope" />
            </xpath>
            
		</field>
	 </record>
      
     <record id="product_template_form_view_bb" model="ir.ui.view">
		<field name="name">product.template.common.form.bb</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field name="arch" type="xml">
            
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="margin" />
            </xpath>
            
            <xpath expr="//field[@name='standard_price']/.." position="after">
                <field name="sheet_width"/>
                <field name="sheet_height"/>
                <field name="thickness"/>
            </xpath>
     	</field>
	 </record>
      
  </data>
</odoo>