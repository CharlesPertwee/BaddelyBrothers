<odoo>
	<data>
        <record id="view_workcenter_filter" model="ir.ui.view">
            <field name="name">workcenter.filter.view</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.view_mrp_workcenter_search"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter string="Process" name="process_type" context="{'group_by':'process_type'}"/>
                </xpath>
            </field>
        </record>
        
		<record id="mrp_workcenter_view_bb" model="ir.ui.view">
			<field name="name">mrp.workcenter.form.bb</field>
			<field name="model">mrp.workcenter</field>
			<field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<field name="process_type"/>
				</xpath>
                 <xpath expr="//field[@name='note']" position="after">
                    <group>
                        <field name="jobTicketDescription"/>
                        <field name="notesForEstimator"/>
                    </group>
                </xpath>
				<xpath expr="//notebook[1]/page[1]" position="after">
					<page string="Quantity Breaks" name="QunatityBreaks" autofocus="autofocus" attrs="{'invisible':[('process_type','=',False)]}">
						<field name="qty_break_params"/>
					</page>
                    <page string="Process Information" name="ProcessInfo" attrs="{'invisible':[('process_type','=',False)]}">
                            <group string="Category Information">
                                <group>
                                    <field name="standard_price"/>
                                    <field name="list_price"/>
                                    <field name="margin_percent"/>
                                    <field name="associatedBoxId" />
                                    <field name="sheetsPerBox" />
                                    <field name="timePerBox" widget="float_time" />
                                </group>
                                <group>
                                    <field name="paper_type"/>
                                    <field name="windowPatchingAvailable"/>
                                    <field name="peelStickAvailable"/>
                                    <field name="inlineEmbossAvailable"/>
                                    <field name="gummingAvailable"/>
                                    <field name="documentCatergory"/>
                                </group>
                            </group>
                    
                            <group string="Additional Info">
                                <field name="additional_charge"/>
                                <field name="misc_charge_per_cm2"/>
                                <field name="ink_mix_time" widget="float_time" />
                            </group>
                        
                    </page>
				</xpath>
           </field>
		</record>
	</data>
</odoo>