<odoo>
	<data>
        <record model="ir.module.category" id="contact_manager">
          <field name="name">Contact</field>
          <field name="description">Contact Acess to relieve on hold</field>
          <field name="sequence">3</field>
        </record>

        <record id="group_contacts_user" model="res.groups">
         <field name="name">Manager</field>
         <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
         <field name="category_id" ref="bb_contacts.contact_manager"/>
        </record>		

        <record id="group_contacts_admin" model="res.groups">
         <field name="name">Admin</field>
         <field name="implied_ids" eval="[(4, ref('bb_contacts.group_contacts_user'))]"/>
         <field name="category_id" ref="bb_contacts.contact_manager"/>
        </record>
	</data>
</odoo>